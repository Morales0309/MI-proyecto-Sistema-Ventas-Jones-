@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5">
                <div class="card-header text-center">
                    <img src="https://i.ibb.co/GWMMsfX/JonesIco.png" alt="Logo Jones" class="img-fluid">
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <h4 class="card-title text-center mb-4">Inicio de sesión</h4>
                        <hr />

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Introduzca su dirección de correo electrónico" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.Password" class="form-label">Contraseña</label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Introduzca su contraseña" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4 form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">Recuérdame</label>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-lg w-100">Iniciar sesión</button>
                        </div>
                        <style>
                            .btn-danger:active {
                                background-color: red; /* Cambia el color a rojo cuando se hace clic */
                                /* Puedes agregar otras propiedades CSS según tus necesidades */
                            }
                        </style>

                        <div class="mt-3 text-center">
                            <p>
                                <a href="#">¿Olvidó su contraseña?</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #5e2129;
    }

    .card {
        border: 1px solid #e1e1e1;
        border-radius: 10px;
    }

    .card-header {
        background-color: #fff;
        border-bottom: 1px solid #e1e1e1;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #5f0507;
        border: 2px solid gray;
    }

        .btn-primary:hover {
            background-color: #5f0507;
            border: 1px solid #5f0507;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
