<MudPaper Width="250px" Class="d-inline-flex py-3" Elevation="0">


    <MudNavMenu Rounded="true" Margin="Margin.Dense" Color="Color.Dark" Class="mud-width-full custom-menu">
        <MudText Typo="Typo.h6" Class="px-4">Sistema ventas Jones</MudText>
        <MudDivider Class="my-2" />

        <MudNavLink IconColor="Color.Surface" Href="/" Icon="@Icons.Filled.Dashboard">Reportes</MudNavLink>

        <AuthorizeView Roles="admin">
            <Authorized>         
                <MudNavLink IconColor="Color.Surface" Href="/lista-compras" Icon="@Icons.Filled.ShoppingBag">Compras</MudNavLink>
            </Authorized>
        </AuthorizeView>

        


       <AuthorizeView Roles="admin">
            <Authorized>
               
                <MudNavGroup IconColor="Color.Surface" Title="Catálogos" Icon="@Icons.Filled.AccountTree" Expanded="true">
                    <MudNavLink Href="/lista-marcas" Match="NavLinkMatch.Prefix">Marcas</MudNavLink>
                    <MudNavLink Href="/lista-tamanios" Match="NavLinkMatch.Prefix">Tamaños</MudNavLink>
                    <MudNavLink Href="/indexcategoria" Match="NavLinkMatch.Prefix">Categorías</MudNavLink>
                    <MudNavLink Color="Color.Primary" Href="/lista-clientes">Clientes</MudNavLink>
                    <MudNavLink Href="/lista-proveedores">Proveedores</MudNavLink>
                </MudNavGroup>
            </Authorized>
        </AuthorizeView>

        <MudNavLink IconColor="Color.Surface" Href="/lista-articulos" Icon="@Icons.Filled.AddShoppingCart">Administracion de productos</MudNavLink>
                   
            <MudNavLink IconColor="Color.Surface" Href="/lista-ventas" Icon="@Icons.Filled.ShoppingBag">Ventas</MudNavLink>

        
        <AuthorizeView Roles="admin">
            <Authorized>
                @*<MudNavLink Icon="@Icons.Filled.AddShoppingCart"  Href="authentication/register">Registrarse</MudNavLink>*@
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="admin">
            <Authorized>
                <MudNavGroup IconColor="Color.Surface" Title="Ajustes" Icon="@Icons.Filled.Settings" Expanded="true">
                    <MudNavLink Href="/lista-usuarios">Usuarios</MudNavLink>
                    <MudNavLink Href="/roles">Asignar Roles</MudNavLink>
                    <MudNavLink Href="/lista-ajustes">Configuracion</MudNavLink>
                   @*@ <MudNavLink Href="/authentication/register">Registrar nuevo Usuario </MudNavLink>*@
                </MudNavGroup>
            </Authorized>
        </AuthorizeView>

    </MudNavMenu>
</MudPaper>

<style>
    mud-appbar {
        width: 100%;
        display: flex;
        z-index: var(--mud-zindex-appbar);
        position: relative;
        box-sizing: border-box;
        flex-shrink: 0;
        flex-direction: column;
        color: var(--mud-palette-appbar-text);
        background-color: mediumpurple;
        transition: margin 225ms cubic-bezier(0,0,.2,1) 0ms,width 225ms cubic-bezier(0,0,.2,1) 0ms;
    }

    .custom-menu {
        background-color: #5f0507; /* Dark blue color, you can change this */
        color: #e3d7d7; /* Text color */
        /* Add any additional styles as needed */
    }
    /* Add hover effect to MudNavLink */
    .mud-nav-link:hover, .mud-nav-link:active{
        color: blue !important; /* Change the text color to blue on hover */
    }
</style>
@code {
    [Parameter]
    public bool SideBarOpen { get; set; }   
}