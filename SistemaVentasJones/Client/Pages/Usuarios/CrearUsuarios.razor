@page "/crearusuarios"
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@inject ISnackbar Snackbar
@attribute [Authorize(Roles = "admin")]

<div class="d-flex justify-content-between mb-3">
    <div>
        <button @onclick="@Volver" class="btn btn-sm btn-secondary">
            <i class="oi oi-arrow-circle-left"></i> Volver al listado
        </button>
    </div>
    <div>
        <h3><b>Nuevo usuario</b></h3>
    </div>
</div>

<FormularioUsuarios TextBotonSubmit="Guardar" OnValidSubmit="@Crear" applicationUser="@applicationUser" />

@code {
    ApplicationUser applicationUser = new ApplicationUser();

    async Task Crear()
    {
        var respuesta = await Http.PostAsJsonAsync("/api/Usuarios", applicationUser);

        if (respuesta.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/lista-usuarios"); //  cambiar a indexArticulo
            //await JS.InvokeVoidAsync("simple", "¡Éxito!", "Marca creada", "success");
            Snackbar.Add("Agregado con éxito", Severity.Success, 
                a => a.VisibleStateDuration = 200);
        }
        else
        {
            //await JS.InvokeVoidAsync("simple", "Error",
            //        "No se pudo crear este producto", "error");
            Snackbar.Add("Ha ocurrido un error", Severity.Error);
        }
    }

    void Volver()
    {
        NavigationManager.NavigateTo("/lista-usuarios"); //  cambiar a index
    }
}